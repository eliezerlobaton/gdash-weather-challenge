# MongoDB Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=admin123
MONGO_DATABASE=gdash_weather

# RabbitMQ Configuration
RABBITMQ_USER=guest
RABBITMQ_PASS=guest
RABBITMQ_QUEUE=weather_data

# API Configuration (Development)
JWT_SECRET=dev-secret-key-for-challenge
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=123456

# Weather Data Collection
# Coordinates for São Paulo, Brazil (change to your city)
LATITUDE=-23.5505
LONGITUDE=-46.6333
LOCATION_NAME="São Paulo, Brazil"

WEATHER_API_URL=https://api.open-meteo.com/v1/forecast
# Collection interval in seconds (300 = 5 minutes for faster testing)
COLLECTION_INTERVAL=300

# Logging (debug for development)
LOG_LEVEL=debug

# Optional: For OpenWeather API instead of Open-Meteo
# OPENWEATHER_API_KEY=your_api_key_here
